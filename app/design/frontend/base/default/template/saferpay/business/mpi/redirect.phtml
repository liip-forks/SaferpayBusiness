<div id="3ds-notification-<?php echo $this->getCcType() ?>" class="sp3ds-notification">
	<?php if ($this->is3dsCard()): ?>
	<div class="sp3ds-logo">
		<img src="<?php echo $this->getSkinUrl('saferpay/business/images/' . $this->getMethodCode() . '/3ds/' . $this->getCcType() . '.gif') ?>" alt="<?php echo $this->getMethod3dsTitle() ?>"/>
